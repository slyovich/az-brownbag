{
  "Gateway": {
    "SessionTimeoutInMin": "60",
    "Version": "1.0.0"
  },
  "Redis": {
    "InstanceName": "",
    "ConnectionString": ""
  },
  "OpenIdConnect": {
    "Authority": "[SEE IN SECRETS]",
    "ClientId": "[SEE IN SECRETS]",
    "ClientSecret": "[SEE IN SECRETS]",
    "Scopes": "[SEE IN SECRETS]",
    "QueryUserInfoEndpoint": false
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Apis": [
    {
      "ApiPath": "/api/",
      "ApiScopes": "[SEE IN SECRETS]"
    }
  ],
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Clusters": {
      "blazorapp": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7010"
          }
        }
      },
      "webapi": {
        "Destinations": {
          "destination1": {
            "Address": "https://localhost:7177"
          }
        }
      }
    },
    "Routes": {
      "api": {
        "clusterId": "webapi",
        "AuthorizationPolicy": "authPolicy",
        "Match": {
          "Path": "/api/{**any}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api" },
          { "RequestHeader": "dapr-app-id", "Append": "webapi" }
        ]
      },
      "blazorapp": {
        "clusterId": "blazorapp",
        "AuthorizationPolicy": "authPolicy",
        "Match": {
          "Path": "/{**any}"
        },
        "Transforms": [
          { "RequestHeader": "dapr-app-id", "Append": "blazorapp" }
        ]
      }
    }
  }
}